// start showing Books to Home Page//
    function displayingToHomePage(book){
        let {title,author,imageLink} = book

        //creating book-container

        let bookContainer = document.createElement("div")
        bookContainer.classList.add('book-container')

        let image = document.createElement('img')

        let discriptionContaier = document.createElement('div')
        discriptionContaier.classList.add("discription-container")

        let TITLE = document.createElement('h3')
        let AUTHOR = document.createElement('p')

        image.src=imageLink
        image.classList.add("image")

        TITLE.textContent= "TITLE : "+ title
        TITLE.style.margin="10px"
        TITLE.style.padding="10px"

        AUTHOR.textContent= "AUTHOR : " + author
        
        bookContainer.appendChild(image)
        bookContainer.appendChild(discriptionContaier)

        discriptionContaier.appendChild(TITLE)
        discriptionContaier.appendChild(AUTHOR)
        BookContainer.appendChild(bookContainer)
    
    }
//----here end of showing Books-----//


//--  starting display Books---- //
    function displayBooks(search_results){
        if(search_results && search_results.length>0){
        let book = search_results[0]
        console.log(book)
        displayingToHomePage(book)
        message.style.display='none'

