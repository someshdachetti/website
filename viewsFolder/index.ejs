            message.textContent ='No Book Found, Click Get Book'
            message.style.display='block'
        }
         
    }

//-- ending display Books -----------//

    function search(event){
        let userText = searchItem.value
        if(event.key==="Enter"){
            searchItem.value=" "
            let Loading = document.getElementById('loading')
            loading.style.display='block'

            let options = {
                method:"GET",
            }
            fetch("https://apis.ccbp.in/book-store?title=" + userText, options)
            .then(function(response){
                return response.json()
            })
            .then(function(Books){
                console.log(Books)
                let {search_results} = Books
                displayBooks(search_results)
                loading.style.display="none"
                
            })
        }
    }

    searchItem.addEventListener("keydown", search)
